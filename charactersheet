            box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
        }
        input, select, textarea {
            width: 100%;
            padding: 5px;
            margin: 5px 0;
        }
        .section {
            margin-bottom: 20px;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 10px;
        }
    </style>
</head>
<body>
    <div class="sheet">
        <h2>Mutants & Masterminds 2e Character Sheet</h2>
        <div class="section">
            <label>Character Name:</label>
            <input type="text" id="characterName">
        </div>
        <div class="grid">
            <div>
                <label>Alternate Identity:</label>
                <input type="text" id="altIdentity">
            </div>
            <div>
                <label>Power Level:</label>
                <input type="number" id="powerLevel">
            </div>
        </div>
        <div class="section">
            <h3>Abilities</h3>
            <div class="grid">
                <div><label>Strength</label><input type="number" id="strength"></div>
                <div><label>Dexterity</label><input type="number" id="dexterity"></div>
                <div><label>Constitution</label><input type="number" id="constitution"></div>
                <div><label>Intelligence</label><input type="number" id="intelligence"></div>
                <div><label>Wisdom</label><input type="number" id="wisdom"></div>
                <div><label>Charisma</label><input type="number" id="charisma"></div>
            </div>
        </div>
        <div class="section">
            <h3>Powers/Devices</h3>
            <textarea id="powers" rows="5"></textarea>
        </div>
        <div class="section">
            <h3>Feats</h3>
            <textarea id="feats" rows="3"></textarea>
        </div>
        <button onclick="saveCharacter()">Save Character</button>
    </div>

    <script>
        function saveCharacter() {
            const character = {
                name: document.getElementById('characterName').value,
                altIdentity: document.getElementById('altIdentity').value,
                powerLevel: document.getElementById('powerLevel').value,
                abilities: {
                    strength: document.getElementById('strength').value,
                    dexterity: document.getElementById('dexterity').value,
                    constitution: document.getElementById('constitution').value,
                    intelligence: document.getElementById('intelligence').value,
                    wisdom: document.getElementById('wisdom').value,
                    charisma: document.getElementById('charisma').value
                },
                powers: document.getElementById('powers').value,
                feats: document.getElementById('feats').value
            };
            localStorage.setItem('mnmCharacter', JSON.stringify(character));
            alert('Character saved!');
        }
    </script>
